<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <TextView
                    android:id="@+id/txt_nomer"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Номер"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/field_nomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Введите номер"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <TextView
                    android:id="@+id/txt_data"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Дата"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/field_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Введите дату"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <TextView
                    android:id="@+id/txt_namegruz"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Наименование груза"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/field_namegruz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Введите груз"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Email Заказчика"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/field_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/zEmail"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <TextView
                    android:id="@+id/txt_zakazchik"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Заказчик"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/field_zakazchik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Введите заказчика"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <TextView
                    android:id="@+id/txt_otpravitel"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Отправитель"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/field_otpravitel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Введите отправителя"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <TextView
                    android:id="@+id/txt_poluchatel"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Получатель"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/field_poluchatel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Введите получателя"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:text="План"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:hint="Факт"
                    android:layout_weight="30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/txt_kolichestvo"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="Количество"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_kolichestvo_fact"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:text="Количество"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/field_kolichestvo_fact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:hint="Введите количество"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="100">

                <TextView
                    android:id="@+id/txt_ves"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="Вес"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_ves_plan"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:text="Вес"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/field_ves_fact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="16sp"
                    android:hint="Введите вес"
                    android:layout_weight="30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="100">

                <TextView
                    android:id="@+id/txt_volume"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Объем"
                    android:textSize="16sp"
                    android:layout_weight="40"/>

                <TextView
                    android:id="@+id/txt_planvolume"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Объем"
                    android:textSize="16sp"
                    android:layout_weight="30"/>

                <EditText
                    android:id="@+id/field_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="16sp"
                    android:hint="Введите объем"
                    android:layout_weight="30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <TextView
                    android:id="@+id/txt_upakovka"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Упаковка"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/field_upakovka"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:hint="Введите тип упаковки"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center">

                <Button
                    android:id="@+id/txt_povrezhden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Груз поврежден"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewSuperviser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#6e6e6e"
                    android:src="@drawable/search"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnSuperviserSend"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="Печать этикетки"
                android:textColor="#db5858"/>

            <Button
                android:id="@+id/btnSuperviserSave"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="Сохранить"
                android:textColor="#db5858"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
